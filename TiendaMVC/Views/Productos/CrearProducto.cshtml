@using Tienda.Models
@model Producto

<form asp-controller="Productos" asp-action="CrearProducto">
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>    
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio">Precio</label>
        <input asp-for="@Model.Precio" class="form-control" />
        <span asp-validation-for="@Model.Precio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <button><a asp-action="Index" class="btn btn-secondary">Volver</a></button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

