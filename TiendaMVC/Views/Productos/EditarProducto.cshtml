@using TiendaMVC.ViewModel
@model EditarProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            
            <div class="card shadow-lg border-0 rounded-3">
                
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(to right, #0d6efd, #0a58ca);">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-box-seam me-2"></i>Editar Producto
                    </h3>
                    <small class="opacity-75">Modifique los detalles del inventario</small>
                </div>

                <div class="card-body p-5">
                    <form asp-action="EditarProducto" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Descripcion" class="form-label fw-bold text-secondary">
                                <i class="bi bi-tag-fill me-1"></i> Descripci√≥n
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-primary"><i class="bi bi-card-text"></i></span>
                                <input asp-for="Descripcion" class="form-control border-start-0" placeholder="Nombre del producto" autofocus />
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger small ps-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Precio" class="form-label fw-bold text-secondary">
                                <i class="bi bi-currency-dollar me-1"></i> Precio Unitario
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-success fw-bold">$</span>
                                <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control border-start-0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Precio" class="text-danger small ps-1"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}