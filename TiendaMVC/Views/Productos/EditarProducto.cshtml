@using TiendaMVC.ViewModel
@model EditarProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="EditarProducto" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group" hidden>
        <label asp-for="@Model.Id" class="control-label"></label>
        <input asp-for="@Model.Id" class="form-control" />
        <span asp-validation-for="@Model.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Descripcion" class="control-label"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Precio" class="control-label">Precio</label>
        <input asp-for="@Model.Precio" type="number" min="0" class="form-control" />
        <span asp-validation-for="@Model.Precio" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Editar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}