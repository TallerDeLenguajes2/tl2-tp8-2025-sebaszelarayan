@using TiendaMVC.ViewModel

@model List<ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
}
<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary" asp-controller="Productos" asp-action="CrearProducto">Crear Producto</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td hidden>@producto.Id</td>
                <td>@producto.Descripcion</td>
                <td>$@producto.Precio</td>
                <td class="text-center">
                    <a asp-controller="Productos" asp-action="EditarProducto" asp-route-id="@producto.Id"
                        class="btn btn-warning">Editar</a>
                    <a asp-controller="Productos" asp-action="DeleteProducto" asp-route-id="@producto.Id"
                        class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>