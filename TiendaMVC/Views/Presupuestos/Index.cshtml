@using TiendaMVC.ViewModel
@model List<PresupuestoViewModel>
@{
    ViewData["Title"] = "Presupuestos";
}
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-file-earmark-text-fill me-2"></i>@ViewData["Title"]
        </h2>


        <a class="btn btn-success shadow-sm" asp-controller="Presupuestos" asp-action="CrearPresupuesto">
            <i class="bi bi-plus-lg me-1"></i> Nuevo Presupuesto
        </a>

    </div>

    <div class="card shadow border-0 rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th hidden>ID</th>
                        <th class="ps-3">Destinatario</th>
                        <th>Fecha de Creación</th>
                        <th class="text-center" style="width: 200px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No hay presupuestos registrados.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var presupuesto in Model)
                        {
                            <tr>
                                <td hidden>@presupuesto.Id</td>
                                <td class="ps-4 fw-bold text-dark">@presupuesto.NombreDestinatario</td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @presupuesto.FechaCreacion.ToShortDateString()
                                    </span>
                                </td>
        
                                <td class=" text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Presupuestos" asp-action="Details" asp-route-id="@presupuesto.Id"
                                            class="btn btn-sm btn-outline-primary" title="Ver Detalle">
                                            <i class="bi bi-eye-fill"></i> Detalle
                                        </a>

                                        <a asp-controller="Presupuestos" asp-action="EditarPresupuesto"
                                            asp-route-id="@presupuesto.Id" class="btn btn-sm btn-outline-warning"
                                            title="Editar">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>

                                        <a asp-controller="Presupuestos" asp-action="DeletePresupuesto"
                                            asp-route-id="@presupuesto.Id" class="btn btn-sm btn-outline-danger"
                                            title="Eliminar"
                                            onclick="return confirm('¿Está seguro de que desea eliminar el presupuesto de @presupuesto.NombreDestinatario?');">
                                            <i class="bi bi-trash-fill"></i> Eliminar
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>