@using TiendaMVC.Models
@model Presupuesto
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Detalle del Presupuesto";

}

<div class="container py-5">

    <div class="card shadow-lg border-0 rounded-3 overflow-hidden">

        <div class="card-header text-white p-4" style="background: linear-gradient(to right, #0d6efd, #0a58ca);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0 fw-bold"><i class="bi bi-receipt-cutoff me-2"></i>Presupuesto #@Model.Id</h3>
                    <small class="opacity-75">Detalle completo de la orden</small>
                </div>
                <div class="text-end">
                    <h5 class="mb-0">@Model.FechaCreacion.ToShortDateString()</h5>
                    <small class="opacity-75">Fecha de Emisión</small>
                </div>
            </div>
        </div>

        <div class="card-body p-5">

            <div class="row mb-5">
                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase fw-bold mb-3">Información del Cliente</h6>
                    <div class="p-3 bg-light rounded-3 border-start border-4 border-primary">
                        <h4 class="text-primary mb-1">@Model.NombreDestinatario</h4>
                        <p class="text-muted mb-0"><i class="bi bi-person-badge me-2"></i>Destinatario Final</p>
                    </div>
                </div>
                <div class="col-md-6 text-md-end d-flex align-items-center justify-content-md-end mt-3 mt-md-0">

                    <a class="btn btn-success shadow-sm px-4 py-2" asp-controller="Presupuestos"
                        asp-action="AgregarProducto" asp-route-id="@Model.Id">
                        <i class="bi bi-cart-plus me-2"></i>Agregar Producto
                    </a>

                </div>
            </div>

            <h5 class="text-secondary mb-3"><i class="bi bi-box-seam me-2"></i>Productos del Presupuesto</h5>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th scope="col" class="py-3 ps-3">Producto</th>
                            <th scope="col" class="py-3 text-center">Cantidad</th>
                            <th scope="col" class="py-3 text-end">Precio Unitario</th>
                            <th scope="col" class="py-3 text-end pe-3">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Detalle == null || !Model.Detalle.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted bg-light rounded-3">
                                    <i class="bi bi-basket fs-1 d-block mb-2"></i>
                                    Aún no hay productos cargados en este presupuesto.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Detalle)
                            {
                                <tr>
                                    <td class="ps-3 fw-bold text-dark">@item.Producto?.Descripcion</td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary rounded-pill px-3">@item.Cantidad</span>
                                    </td>
                                    <td class="text-end text-muted">@item.Producto?.Precio.ToString("C")</td>
                                    <td class="text-end pe-3 fw-bold text-primary">
                                        @((item.Producto?.Precio * item.Cantidad)?.ToString("C"))
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>